<!-- Delete.cshtml -->
@model Blog

<h2>Delete Blog Post</h2>

<div>
    <h4>Are you sure you want to delete this post?</h4>
    <h3>@Model.PostTitle</h3>
    @using (Html.BeginForm("DeleteConfirmed", "Blog")) //Here "Post" after ChronicleEPost was removed!
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.PostId)
        <button type="submit" class="btn btn-danger" id="loginbutton">Delete</button>
    }
    @Html.ActionLink("Cancel", "Index", "Blog"); <!--Here "IndexChronicleEBPost" was add after "Cancle"-->
    }
</div>
